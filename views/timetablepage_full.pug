extends layout
block content
  include timetablepage.pug

block extraHeader
  
  if options.showMap
    script(src="https://api.mapbox.com/mapbox-gl-js/v0.35.1/mapbox-gl.js")
    script.
      mapboxgl.accessToken = '#{options.mapboxAccessToken}';
    script(src="/js/timetable_map.js")
      
    link(href="https://api.mapbox.com/mapbox-gl-js/v0.35.1/mapbox-gl.css" rel="stylesheet")
  
block extraFooter
  if options.menuType === 'radio'
    script(src="/js/timetable_menu.js")
